<!DOCTYPE html>
<html>
  <head>
    <title>iCook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=PT+Sans:700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=BenchNine&display=swap" rel="stylesheet">
    <%= favicon_link_tag asset_path("Fork-01.png")%>
    <script type="text/javascript">
      window.indexURL = "<%= image_url('batch_cooking.jpg') %>";
      window.homeButtonURL = "<%= image_url('home-button.png') %>";
      window.avatarIconURL = "<%= image_url('avatar-icon.png') %>";
      window.introGifURL = "<%= image_url('cooking.gif') %>";
      window.logoURL = "<%= image_url('Fork-01.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
